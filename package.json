{
  "name": "babelnode-ts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "todo": {
    "window users": "npm install -g win-node-env"
  },
  "scripts": {
    "build": "rimraf dist && babel ./src --out-dir dist --copy-files --extensions .ts,.js",
    "start": "NODE_ENV=production yarn build && node dist/index.js",
    "dev": "NODE_ENV=development nodemon src/index.ts --ext ts,js,graphql --exec babel-node --extensions .ts,.js",
    "tsc": "tsc --isolatedModules false",
    "lint": "tslint -c tslint.json --fix --format verbose  src/**/*.{ts,tsx}"
  },
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.1.5",
    "@types/node": "^10.12.2",
    "babel-core": "7.0.0-bridge.0",
    "dotenv": "^6.2.0",
    "rimraf": "^2.6.2",    
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "nodemon": "^1.18.6",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  }
}
